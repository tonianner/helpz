<div class="container">
  <div class="col-md-6 col-md-offset-3 col-sm-6 col-sm-offset-3">

    <div class="panel panel-info" >
      <div class="panel-heading">
          <div class="panel-title text-center">Welcome back</div>
      </div>

      <div class="panel-body" >

        <h4>Please Log In, or <a href="/signup">Register</a></h4>

        <form name="form" id="form" class="form-horizontal" method="post" action="/signin">

          <div class="input-group">
            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
            <input id="email" type="email" class="form-control" name="email" value="" placeholder="email@domain.com">
          </div>

          <div class="input-group">
            <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
            <input id="password" type="password" class="form-control" name="password" placeholder="Password">
          </div>

          <div class="form-group">
            <div class="col-sm-12 controls">
              <input class="btn btn-primary pull-right login-btn" type="submit" value="Login">
            </div>
          </div>

          <div class="pull-right">
            <a href="/auth/facebook"class="btn btn-social btn-facebook">
              <span class="fa fa-facebook"></span>
              Login with Facebook
            </a>
          </div>

          <% if (message.length > 0) { %>
            <div class="alert alert-danger"><%= message %></div>
          <% } %>
        </form>
      </div>
    </div>

  </div>
</div>
